<h1>Resque Queue Status</h1>

<table border="1">
  <thead>
    <tr>
      <th>Queue Name</th>
      <th>Pending</th>
      <th>Workers</th>
      <th>Working</th>
    </tr>
  </thead>
  <tbody>
    <% @queues.each do |queue| %>
      <tr>
        <td><%= queue[:name] %></td>
        <td><%= queue[:pending] %></td>
        <td><%= queue[:workers] %></td>
        <td><%= queue[:working] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Overall Statistics</h2>
<table border="1">
  <tr>
    <th>Total Processed</th>
    <td><%= @total_processed %></td>
  </tr>
  <tr>
    <th>Total Failed</th>
    <td><%= @total_failed %></td>
  </tr>
</table>
